{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "regions": ["iad1"],
  "env": {
    "SMTP_USER": "@SMTP_USER",
    "SMTP_PASSWORD": "@SMTP_PASSWORD",
    "SMTP_HOST": "@SMTP_HOST",
    "SMTP_PORT": "@SMTP_PORT",
    "SMTP_SECURE": "@SMTP_SECURE",
    "EMAIL_FROM": "@EMAIL_FROM",
    "EMAIL_TO": "@EMAIL_TO"
  }
}
